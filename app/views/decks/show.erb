<div class="col-md-3"></div>

<div class="col-md-6">
  <% if @round %>
    <% if @message %>
     <h3 class="text"> <%= @message.first %> </h3>
    <%end%>
    <%= erb :'decks/_play', locals: {deck:            @deck,
                                     round:           @round,
                                     current_card:    @current_card,
                                     correct_guesses: @correct_guesses,
                                     false_guesses:   @false_guesses} %>

  <%else%>
    <%= erb :'decks/_confirm', locals: {deck: @deck} %>
  <%end%>
</div>

<div class="col-md-3"></div>